<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sszabo.life_tok.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.sszabo.life_tok.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_create"
        android:name="com.sszabo.life_tok.ui.create.CreateFragment"
        android:label="@string/title_create"
        tools:layout="@layout/fragment_create">
        <action
            android:id="@+id/action_navigation_create_to_navigation_post"
            app:destination="@id/navigation_post"
            app:enterAnim="@android:animator/fade_in"
            app:exitAnim="@android:animator/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.sszabo.life_tok.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_post"
        android:name="com.sszabo.life_tok.ui.post.PostFragment"
        android:label="@string/title_post"
        tools:layout="@layout/fragment_post">
        <action
            android:id="@+id/action_navigation_post_to_navigation_create"
            app:destination="@id/navigation_create"
            app:enterAnim="@android:animator/fade_in"
            app:exitAnim="@android:animator/fade_out"
            app:popUpTo="@id/navigation_create"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>